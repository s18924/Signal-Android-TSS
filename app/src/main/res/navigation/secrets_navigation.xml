<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/secrets_navigation"
    app:startDestination="@id/secretsMenuFragment">

    <fragment
        android:id="@+id/secretsMenuFragment"
        android:name="org.thoughtcrime.securesms.secrets.SecretsLandingFragment"
        android:label="Secrets landing fragment  ">
        <action
            android:id="@+id/action_secretsLandingFragment_to_createNewSecretFragment"
            app:destination="@id/createSecretFragment" />

        <action
            android:id="@+id/action_secretsLandingFragment_to_mySecretsFragment"
            app:destination="@id/mySecretsFragment" />
    </fragment>

    <fragment
        android:id="@+id/createSecretFragment"
        android:name="org.thoughtcrime.securesms.secrets.CreateNewSecretFragment"
        android:label="Create new secret fragment. ">
        <action
            android:id="@+id/action_createNewSecret_to_secretLandingFragment"
            app:destination="@id/secretsMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/mySecretsFragment"
        android:name="org.thoughtcrime.securesms.secrets.MySecretsFragment"
        android:label="Go to my secrets fragment list. ">
        <action
            android:id="@+id/action_mySecrets_to_secretLandingFragment"
            app:destination="@id/secretsMenuFragment" />

        <action
            android:id="@+id/action_mySecrets_to_secretOverviewFragment"
            app:destination="@id/secretOverviewFragment" >
            <argument
                android:name="secret"
                app:argType="org.thoughtcrime.securesms.secrets.database.Secret" />
        </action>
    </fragment>



    <fragment
        android:id="@+id/secretOverviewFragment"
        android:name="org.thoughtcrime.securesms.secrets.SecretOverviewFragment"
        android:label="Go to my secrets fragment list. ">
        <action
            android:id="@+id/action_secretOverview_to_secretLandingFragment"
            app:destination="@id/secretsMenuFragment" />
    </fragment>



</navigation>